@page
@model TrabajoFinal.Pages.Pagos.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Pagos</h1>

<p>
    <a asp-page="Create">Crear nuevo </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pago[0].estudianteID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pago[0].moduloID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pago[0].Monto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pago[0].Fecha_Pago)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Pago) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.estudianteID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.moduloID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Monto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_Pago)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.pagoID">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.pagoID">Detalle</a> |
                <a asp-page="./Delete" asp-route-id="@item.pagoID">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
