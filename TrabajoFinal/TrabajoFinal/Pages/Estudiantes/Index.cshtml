@page
@model TrabajoFinal.Pages.Estudiantes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Estudiantes</h1>

<p>
    <a asp-page="Create">Agregar nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Estudiante[0].Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estudiante[0].Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estudiante[0].Edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estudiante[0].Nacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estudiante[0].Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estudiante[0].Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estudiante[0].Cedula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estudiante[0].Tutor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Estudiante) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tutor)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.estudianteID">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.estudianteID">Detalles</a> |
                <a asp-page="./Delete" asp-route-id="@item.estudianteID">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
