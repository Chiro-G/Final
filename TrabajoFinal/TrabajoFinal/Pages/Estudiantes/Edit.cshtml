@page
@model TrabajoFinal.Pages.Estudiantes.EditModel

@{
    ViewData["Title"] = "Edit";
}



<h4>Editar Estudiante</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Estudiante.estudianteID" />
            <div class="form-group">
                <label asp-for="Estudiante.Nombres" class="control-label"></label>
                <input asp-for="Estudiante.Nombres" class="form-control" />
                <span asp-validation-for="Estudiante.Nombres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estudiante.Apellidos" class="control-label"></label>
                <input asp-for="Estudiante.Apellidos" class="form-control" />
                <span asp-validation-for="Estudiante.Apellidos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estudiante.Edad" class="control-label"></label>
                <input asp-for="Estudiante.Edad" class="form-control" />
                <span asp-validation-for="Estudiante.Edad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estudiante.Nacimiento" class="control-label"></label>
                <input asp-for="Estudiante.Nacimiento" class="form-control" />
                <span asp-validation-for="Estudiante.Nacimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estudiante.Direccion" class="control-label"></label>
                <input asp-for="Estudiante.Direccion" class="form-control" />
                <span asp-validation-for="Estudiante.Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estudiante.Telefono" class="control-label"></label>
                <input asp-for="Estudiante.Telefono" class="form-control" />
                <span asp-validation-for="Estudiante.Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estudiante.Cedula" class="control-label"></label>
                <input asp-for="Estudiante.Cedula" class="form-control" />
                <span asp-validation-for="Estudiante.Cedula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estudiante.Tutor" class="control-label"></label>
                <input asp-for="Estudiante.Tutor" class="form-control" />
                <span asp-validation-for="Estudiante.Tutor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Atrás</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
